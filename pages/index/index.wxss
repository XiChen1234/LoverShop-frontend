/* pages/index/index.wxss */
page {
  background: linear-gradient(135deg, #ff66f5a6, #fdd58b98, #ff66f5a6);
}

.lover {
  display: flex;
  align-items: center;
  justify-content: space-around;
  margin: 100rpx 20rpx 0rpx 20rpx;
}

.lover .header {
  width: 200rpx;
  height: 200rpx;
  border-radius: 100%;
}

.lover .love {
  width: 100rpx;
  height: 100rpx;
  animation: heartbeat 1s infinite;
}

/* 心脏跳动动画 */
@keyframes heartbeat {
  0% {
    transform: scale(1);
  }

  20% {
    transform: scale(1.2);
  }

  30% {
    transform: scale(1);
  }

  50% {
    transform: scale(1.1);
  }

  100% {
    transform: scale(1);
  }
}

.text {
  align-self: center;
  font-size: 50rpx;
  font-weight: bold;
  color: #ff7b00;
  margin: 50rpx;
}

.product {
  border-top: 10rpx dotted rgba(255, 174, 121, 0.5);
  padding: 50rpx 10rpx 0rpx 10rpx;
}

.product .masonry {
  column-count: 2;
  column-gap: 30rpx;
}

.product .masonry .item {
  break-inside: avoid;
  margin-bottom: 40rpx;
  background-color: #ffffff5b;
  border-radius: 30rpx;
  padding-bottom: 20rpx;
}

.product .masonry .item image {
  border-radius: 30rpx;
  width: 100%;
}

.product .masonry .item .price {
  margin: 10rpx 20rpx;
  font-size: 45rpx;
  font-weight: bold;
  color: #ff284c;
}

.product .masonry .item .title {
  font-size: 35rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  margin: 0 20rpx;
}