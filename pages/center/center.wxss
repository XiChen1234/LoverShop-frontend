/* pages/center/center.wxss */
.info {
  background-color: #ffdcff;
  margin: 30rpx;
  padding: 40rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.info .header {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  overflow: hidden;
}

.info .header image {
  width: 100%;
  height: 100%;
}

.info .content {
  width: 60%;
}

.info .content .name {
  font-size: 45rpx;
  font-weight: bold;
}

.info .content .text {
  color: #5f5f5f;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.operate {
  position: absolute;
  bottom: 0;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 45rpx;
  margin-bottom: 35rpx;
}

.operate .list {
  width: 100%;
  border-top: 1px solid #888888;
}

.operate .list .item {
  padding: 30rpx;
  border-bottom: 1px solid #888888;
}

.operate .button {
  padding: 30rpx 80rpx;
  margin-top: 40rpx;
  border-radius: 80rpx;
  background-color: #FF6347;
  color: #ffffff;
}